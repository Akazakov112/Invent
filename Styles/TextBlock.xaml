                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseTextBlock"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontFamily"
                    Value="{StaticResource BaseFont}" />
            <Setter Property="FontSize"
                    Value="{StaticResource Regular}" />
            <Setter Property="Foreground"
                    Value="{StaticResource BlackBaseBrush}" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="TextAlignment"
                    Value="Left" />
        </Style.Setters>
    </Style>

    <Style x:Key="RowNumCol"
           TargetType="{x:Type TextBlock}">
        <Style.Triggers>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="White">
                <Setter Property="Background"
                        Value="White" />
            </DataTrigger>

            <DataTrigger Binding="{Binding StatusRec}"
                         Value="В резерв">
                <Setter Property="Background"
                        Value="{StaticResource PlumBaseBrush}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding StatusRec}"
                         Value="Замена этикетки">
                <Setter Property="Background"
                        Value="{StaticResource PowderBlueBaseBrush}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding StatusRec}"
                         Value="Замена этикетки и в резерв">
                <Setter Property="Background"
                        Value="{StaticResource KhakiBaseBrush}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding RepeatRec}"
                         Value="Повтор">
                <Setter Property="Background"
                        Value="{StaticResource PinkBaseBrush}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="Red">
                <Setter Property="Background"
                        Value="Red" />
            </DataTrigger>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="Orange">
                <Setter Property="Background"
                        Value="Orange" />
            </DataTrigger>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="Yellow">
                <Setter Property="Background"
                        Value="Yellow" />
            </DataTrigger>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="Green">
                <Setter Property="Background"
                        Value="LightGreen" />
            </DataTrigger>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="Blue">
                <Setter Property="Background"
                        Value="DodgerBlue" />
            </DataTrigger>

            <DataTrigger Binding="{Binding NumRowColor}"
                         Value="Purple">
                <Setter Property="Background"
                        Value="MediumPurple" />
            </DataTrigger>

        </Style.Triggers>
    </Style>

